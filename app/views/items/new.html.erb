
<p></p>
<div class= 'container-fluid'>
  <div class= "jumbotron">
    <h2>New Trader Joe's Item</h2>
    <p><%= form_for @item do |f| %>
      <div class="form-group col-sm-3">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div><br />

      <div class="row">
        <div class="col-sm-3">
            <%= f.submit 'Save Item', class: "btn btn-lg btn-success"%>
        </div>
      </div>
    </p>
    <% end %>
  </div>
</div>
